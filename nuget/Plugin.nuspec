<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata minClientVersion="2.8.1">
    <id>Xam.Plugin.Hud</id>
    <version>$version$</version>
    <title>Hud Plugin for Xamarin</title>
    <authors>Enner Pérez</authors>
    <owners>Enner Pérez</owners>
    <licenseUrl>https://github.com/ennerperez/hudplugin/blob/master/LICENSE</licenseUrl>
    <projectUrl>https://github.com/ennerperez/hudplugin</projectUrl>
    <iconUrl>https://raw.githubusercontent.com/ennerperez/hudplugin/master/src/.editoricon.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>
      Display HUD's dialog.
    </description>
    <releaseNotes>
      See: https://github.com/ennerperez/hudplugin/blob/master/CHANGELOG.md
    </releaseNotes>
    <summary>Cross platform plugin to display HUD's dialog through a single API from Xamarin.iOS and Xamarin.Android.</summary>
    <tags>xamarin, pcl, xam.pcl, hud, plugin for xamarin, plugins, xamarin.android, xamarin.ios, android, xamarin.forms, ios</tags>
    <dependencies>
      <group targetFramework="monoandroid70">
        <dependency id="AndHUD" version="1.2" />
        <dependency id="Xamarin.Forms" version="2.3" />
      </group>
      <group targetFramework="xamarinios10">
        <dependency id="BTProgressHUD" version="1.2" />
        <dependency id="Xamarin.Forms" version="2.3" />
      </group>
    </dependencies>
  </metadata>
  <files>
    <file src="nuget\readme.txt" target="readme.txt" />

    <!--Core-->
    <file src="src\Plugin.Hud\bin\Release\Plugin.Hud.*" target="lib\portable-net45+wp80+win8+wpa81" />

    <!--Xamarin.Android-->
    <file src="src\Plugin.Hud.Android\bin\Release\Plugin.Hud.*" target="lib\MonoAndroid10" />

    <!--Xamarin.iOS Unified-->
    <file src="src\Plugin.Hud.iOS\bin\Release\Plugin.Hud.*" target="lib\Xamarin.iOS10" />

  </files>
</package>
